FROM python:3.12-slim
WORKDIR /app
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*
COPY vault/requirements.vault.txt .
RUN pip install --no-cache-dir -r requirements.vault.txt
COPY vault/ .
RUN useradd -m -u 1001 vault && mkdir -p /vault && chown vault:vault /vault
USER vault
EXPOSE 8766
HEALTHCHECK --interval=30s --timeout=5s CMD curl -f http://localhost:8766/health || exit 1
CMD ["python", "vault_server.py"]
