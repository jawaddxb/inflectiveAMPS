VAULT_ROOT=/vault
VAULT_MASTER_PASSWORD=changeme_use_strong_password
VAULT_PORT=8766
INFLECTIV_API_KEY=your_inflectiv_api_key
INFLECTIV_API_URL=https://api.inflectiv.ai

# ── Flywheel: Vault → Node Integration ──────────────────────
# Set these in node_runner / refresh_task environments to auto-contribute
VAULT_URL=http://localhost:8766        # URL of your running vault server
# VAULT_TOKEN=vtok_...                 # Owner token (printed on vault startup)
VAULT_AUTO_APPROVE=false               # true = auto-approve node contributions

# ── v1.1: Remote Vault Querying ──────────────────────────────
# To query a remote vault, add it to vaults.yaml:
# knowledge_vaults:
#   - name: partner_defi
#     url: http://partner-vault.example.com:8766
#     token: vtok_subscriber_token
#     type: remote_vault
# Then set: VAULTS_CONFIG=/path/to/vaults.yaml
