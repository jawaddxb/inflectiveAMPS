# ============================================================
# Inflectiv Agent Node — Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================

# ── Inflectiv Platform ───────────────────────────────────────
# Get your API key at: https://app.inflectiv.ai
INFLECTIV_API_KEY=
INFLECTIV_BASE_URL=https://api.inflectiv.ai/v1

# ── $INAI Token (Sui wallet address) ─────────────────────────
# Your Sui wallet address for $INAI micro-payments
INAI_WALLET_ADDRESS=

# ── OpenClaw Node Identity ────────────────────────────────────
# Unique identifier for this node in your OpenClaw swarm
OPENCLAW_NODE_ID=inflectiv-node-01

# ── LLM Provider (choose one) ────────────────────────────────
# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# OpenRouter (access all models via one key)
OPEN_ROUTER_API_KEY=

# ── Agent Zero Settings (auto-configured via A0_SET_ prefix) ──
A0_SET_agent_profile=inflectiv-node

# Chat model (example: Anthropic Claude)
# A0_SET_chat_model_provider=anthropic
# A0_SET_chat_model_name=claude-sonnet-4-5
# A0_SET_chat_model_ctx_length=200000

# Utility model
# A0_SET_utility_model_provider=anthropic
# A0_SET_utility_model_name=claude-haiku-3-5

# ── Authentication ────────────────────────────────────────────
# Secure your instance with a password
A0_SET_ui_login=admin
A0_SET_ui_password=changeme
